<Window x:Class="Login_Page.CtlSplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Login_Page"
        mc:Ignorable="d"    Background="{x:Null}"
        AllowsTransparency="True"
        WindowStyle="None"
        xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
        WindowStartupLocation="CenterScreen"
        Title="CtlSplashScreen" FontFamily="Georgia" ContentRendered="Window_ContentRendered"  Height="450" Width="750">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="\Image\Splash\s.jpg"/>
        </Grid.Background>
      
        <StackPanel VerticalAlignment="Center">
            <dx:DXImage Source="\Image\dexef.svg" Width="200"/>
            <TextBlock Text="The Power Of Your Hand" FontSize="25" FontWeight="Regular"  Foreground="Black" HorizontalAlignment="Center" Margin="0 15 0  0"/>
            <ProgressBar Margin="0 20 0 0" Name="progressBar" IsIndeterminate="True" Value="0" Height="20" Width="280"/>
        </StackPanel>
    </Grid>
</Window>
